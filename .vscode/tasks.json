{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "D:\\MinGW-W64\\ucrt64\\bin\\g++.exe",  // 注意你的路径双反斜杠
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-finput-charset=UTF-8",      // 指定源文件编码为 UTF-8
                "-fexec-charset=UTF-8",       // 指定执行时字符集为 UTF-8
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}