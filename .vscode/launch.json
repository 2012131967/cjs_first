{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch Current File",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}\\${fileBasenameNoExtension}.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "miDebuggerPath": "D:\\MinGW-W64\\ucrt64\\bin\\gdb.exe",
            "preLaunchTask": "C/C++: g++.exe build active file",   // ← 新增这行！必须和 tasks.json 的 label 完全一致
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}